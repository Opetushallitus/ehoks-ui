{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "components/__tests__"]
}
