{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2018" /* mobx - error TS2304: Cannot find name 'AsyncGenerator'*/
    ],
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "./**/__tests__"]
}
